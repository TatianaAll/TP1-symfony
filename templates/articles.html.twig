{% extends 'base.html.twig' %}

{% block metatitle %} Super Article | Tous les article {% endblock metatitle %}

{% block main %}
    <section class="isFlex">
        {# je fais une boucle sur tous mes articles #}
        {% for article in articles %}
            <article class="articlesDisplay">
                <h2 class="inArticle">{{ article.title }}</h2>
                <p class="pArticle">{{ article.content }}, créé le {{ article.createdAt|date("d/m/Y") }}</p>
                <div class='imgContainer'><img src="{{ article.image }}" alt="{{ article.title }}" class="img">
                </div>
                {# je fais un lien qui me conduira sur l'article sur lequel je clique
        Donc j'ajour un a avec un href --> dans ce href j'utilise path avec e #}
                <ul>
                    <li class="liViewSuppr">
                        <a href="{{ path('article_show', {id: article.id}) }}" class="linkArticle">Voir l'article</a>
                    </li>
                    <li class="liViewSuppr">
                        <a href="{{ path('article_update', {id : article.id}) }}" class="linkArticle">Mettre à jour
                            l'article</a>
                    </li>
                    <li class="liViewSuppr">
                        <a href="{{ path('article_delete', {id: article.id}) }}" class="linkArticle delete">Supprimer
                            l'article</a>
                    </li>
                    <li class="liViewSuppr">


                    </li>

                </ul>


            </article>
        {% endfor %}
    </section>

    <section>
        <p class="center"><a href="{{ path('article_create') }}" class="linkForCreate ">Créer un nouvel article</a>
        </p>
    </section>
{% endblock main %}

